<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/content_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.langbai.tdhd.widget.CustomViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D4DADA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:id="@+id/class_layout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/class_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_class"
                    />

                <TextView
                    android:id="@+id/class_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="浪讯"
                    android:textColor="#3eb0ff"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/find_layout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/find_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_find_un"
                    />

                <TextView
                    android:id="@+id/find_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="发现"
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/person_layout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/personal_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_person_un"
                    />

                <TextView
                    android:id="@+id/personal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="我"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>