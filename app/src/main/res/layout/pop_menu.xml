<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_back"
        android:orientation="vertical"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/add_friends"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/icon_friends"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="添加朋友"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F1F1"/>

        <TextView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/icon_scan"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="扫一扫"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F1F1"/>

        <TextView
            android:id="@+id/join_meeting"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/metting"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="加入会议"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F1F1"/>

        <TextView
            android:id="@+id/star_meeting"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/icon_sponsor"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发起会议"
            />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F1F1"/>

        <TextView
            android:id="@+id/create_group"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/icon_group"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="创建群组"
            />
    </LinearLayout>
</LinearLayout>