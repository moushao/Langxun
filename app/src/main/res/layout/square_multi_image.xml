<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_info_white"

              android:orientation="vertical">

    <include layout="@layout/include_square_header"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.youth.banner.Banner
            android:id="@+id/banner"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/black"
            app:indicator_drawable_selected="@drawable/zhishiqi_selecte"
            app:indicator_drawable_unselected="@drawable/zhishiqi_unselecte"/>

    </RelativeLayout>

    <include layout="@layout/include_square_bottom"/>
    <!--点赞控件/评论控件-->

</LinearLayout>