<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="15dp">

    <com.langbai.tdhd.widget.CircleImageView
        android:id="@+id/circle_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/login_head"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"/>

    <TextView
        android:id="@+id/circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="今天我过生"
        android:textColor="@color/circle_head"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintTop_toTopOf="@+id/circle_head"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="1dp"
        android:paddingVertical="1dp"
        android:text="我就是我,不一样的烟火"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_name"/>

    <ImageView
        android:id="@+id/pic_vedio"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintTop_toBottomOf="@+id/content">
    </ImageView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pic_recyc"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic_vedio">
    </android.support.v7.widget.RecyclerView>

    <!--<com.langbai.tdhd.friends.PhotoContents-->
        <!--android:id="@+id/circle_image_container"-->
        <!--android:layout_width="0dp"-->
        <!--app:layout_constraintHorizontal_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="0dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/content"-->
        <!--android:layout_marginRight="8dp"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintLeft_toRightOf="@+id/circle_head"-->
        <!--android:layout_marginLeft="8dp"/>-->

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="10月20日 14:25"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintTop_toBottomOf="@+id/pic_recyc"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="删除"
        android:textColor="@color/circle_head"
        android:textSize="12dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/pic_recyc"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_circle_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time"/>

    <com.langbai.tdhd.circle.praisewidget.PraiseWidget
        android:id="@+id/praise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        app:click_bg_color="#CCD2DF"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintTop_toBottomOf="@+id/time"/>

    <LinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/circle_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/praise"
        tools:background="@android:color/holo_red_dark"/>
</android.support.constraint.ConstraintLayout>