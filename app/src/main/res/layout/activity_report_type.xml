<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_normal"
    android:orientation="vertical"
    tools:context="com.langbai.tdhd.activity.ReportTypeActivity">

    <include
        layout="@layout/toolbar_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_info_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cheat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="欺诈"
            android:textColor="#555555"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B1B1B1"/>

        <TextView
            android:id="@+id/pornographic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/icon_more"

            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="色情"
            android:textColor="#555555"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B1B1B1"/>

        <TextView
            android:id="@+id/false_information"
            android:layout_width="match_parent"

            android:layout_height="48dp"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="不实信息"
            android:textColor="#555555"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#B1B1B1"/>

        <TextView
            android:id="@+id/induced_behavior"

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="诱导行为"
            android:textColor="#555555"
            android:textSize="17sp"/>


    </LinearLayout>
</LinearLayout>
