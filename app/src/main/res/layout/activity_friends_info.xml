<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_friends"
    tools:context="com.langbai.tdhd.activity.FriendsInfoActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        />

    <com.langbai.tdhd.widget.CircleImageView
        android:id="@+id/friend_head"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
    </com.langbai.tdhd.widget.CircleImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_head"/>
    <TextView
        android:id="@+id/platform"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="KF"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        />
    <TextView
        android:id="@+id/sex_age"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_button_blue"
        android:drawablePadding="5dp"
        android:gravity="right|center_vertical"
        android:paddingRight="5dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/platform"
        />

    <ImageView
        android:id="@+id/sex_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/icon_boy"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/sex_age"
        app:layout_constraintLeft_toLeftOf="@+id/sex_age"
        app:layout_constraintTop_toTopOf="@+id/sex_age"
        />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_age"/>

    <TextView
        android:id="@+id/brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxWidth="220dp"
        android:padding="3dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area"/>

    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="1dp"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center"
        android:text="个人相册"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brief"/>

    <TextView
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/shape_info_white_with_coner"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="发送消息"
        android:textColor="@color/actionsheet_blue"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
